@using BSSNop.PlugIn.Widgets.Banner.Models;
@model BannerModel
<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="PictureId" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="PictureId" />
            <span asp-validation-for="PictureId"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="SelectedWidgetZone" />
        </div>
        <div class="col-md-9">
            <select asp-for="SelectedWidgetZone" asp-items="@(new SelectList(Model.WidgetZones))" class="form-control">
                <option value="">@T("Admin.Common.Select")</option>
            </select>
            <span asp-validation-for="SelectedWidgetZone"></span>
        </div>
    </div>
     
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Title" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="NavigationUrl" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="NavigationUrl" />
            <span asp-validation-for="NavigationUrl"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Visibility" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Visibility" />
            <span asp-validation-for="Visibility"></span>
        </div>
    </div>
</div>
